{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "client: chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "breakOnLoad": true,
      "userDataDir": "${workspaceFolder}/.vscode/vscode-chrome-debug-userdatadir",
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      }
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "client: firefox",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "breakOnLoad": true,
      "userDataDir": "${workspaceFolder}/.vscode/vscode-firefox-debug-userdatadir",
      "sourceMapPathOverrides": {
        "webpack:///*": "${webRoot}/*"
      },
      "pathMappings": [
        {
          "url": "webpack:///pages",
          "path": "${workspaceFolder}/citizen-portal/pages"
        },
        {
          "url": "webpack:///middleware",
          "path": "${workspaceFolder}/citizen-portal/middleware"
        },
        {
          "url": "webpack:///middleware",
          "path": "${workspaceFolder}"
        }
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server: nuxt",
      "args": [
        "dev"
      ],
      "osx": {
        "program": "${workspaceFolder}/node_modules/.bin/nuxt"
      },
      "linux": {
        "program": "${workspaceFolder}/node_modules/.bin/nuxt"
      }
    }
  ],
    "compounds": [
      {
        "name": "fullstack: nuxt",
        "configurations": ["server: nuxt", "client: chrome"]
      },
      {
        "name": "fullstack: nuxt-firefox",
        "configurations": ["server: nuxt", "client: firefox"]
      }
  ]
}
